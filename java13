public class MyClass {
    public static void main(String args[]) {
      for(int i=0;i<=0;i++){
          System.out.print("*");
          
      }
      
      for(int j=0;j<=7;j++){ 
          
          for(int k=0;k<=j+1;k++){
              
              if(j%2 !=0){
                  
                 System.out.print("*");
        
    }
          
}  
System.out.println();//new line  
}
    }
}
